<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
/>

    <LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星期一"
            android:textColor="@drawable/buttonstyle"
            android:textSize="10dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星期二"
            android:textColor="@drawable/buttonstyle"
            android:textSize="10dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星期三"
            android:textColor="@drawable/buttonstyle"
            android:textSize="10dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星期四"
            android:textColor="@drawable/buttonstyle"
            android:textSize="10dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星期五"
            android:textColor="@drawable/buttonstyle"
            android:textSize="10dp" />
                <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星期六"
            android:textColor="@drawable/buttonstyle"
            android:textSize="10dp"
            android:visibility="invisible" />
    </LinearLayout>

        
 <ScrollView
      android:id="@+id/ScrollView" 
      android:layout_width="match_parent"   
      android:layout_height="wrap_content"> 
      <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >       
    <TextView
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFEA7A1A" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/textviewstyle"
        android:text="   早餐"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:id="@+id/breakfast"
        android:layout_width="fill_parent"
        android:layout_height="200px"
        android:layout_gravity="center"
        android:background="@drawable/textviewstyle"
        android:text="早餐"
        android:textSize="80px" 
        android:textColor="#FFFFFFFF"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textviewstyle2"
        android:text="   早点"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:id="@+id/morningtaste"
        android:layout_width="fill_parent"
        android:layout_height="200px"
        android:background="@drawable/textviewstyle2"
        android:text="早点"
        android:textSize="80px"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textviewstyle1"
        android:text="   午餐"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:id="@+id/lunch"
        android:layout_width="fill_parent"
        android:layout_height="200px"
        android:background="@drawable/textviewstyle1"
        android:text="午餐"
        android:textSize="80px"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textviewstyle3"
        android:text="   午点" 
        android:textColor="#FFFFFFFF"/>

    <TextView
        android:id="@+id/noontaste"
        android:layout_width="fill_parent"
        android:layout_height="200px"
        android:background="@drawable/textviewstyle3"
        android:text="午点"
        android:textSize="80px" 
        android:textColor="#FFFFFFFF"/>
    </LinearLayout>
</ScrollView>
  
</LinearLayout>